---
import Main from "@/components/Main.astro";
import TipList from "@/components/page/tip/TipList.astro";
import Pagination from "@/components/Pagination.astro";
import TextElement from "@/components/TextElement";

import { languages } from "@/i18n/ui";
import Layout from "@/layouts/Layout.astro";
import type { PaginateFunction } from "astro";
import { getCollection } from "astro:content";

export async function getStaticPaths({
  paginate,
}: {
  paginate: PaginateFunction;
}) {
  const allLanguages = Object.values(languages);
  const allArticles = await getCollection("tips");

  return allLanguages.flatMap((lang) => {
    const langArticles = allArticles.filter(
      (article) => article.data.lang === lang,
    );
    return paginate(langArticles, {
      params: { lang },
      pageSize: 10,
    });
  });
}

const { lang } = Astro.params;
const { page } = Astro.props;

const title = "Cybersecurity Tips";
---

<Layout title={title}>
  <Main>
    <section aria-label="Blog Posts">
      <TextElement variant="heading" className="text-primary">
        {title}
      </TextElement>
      <TipList tips={page.data} lang={lang} />
      <Pagination page={page} />
    </section>
  </Main>
</Layout>
