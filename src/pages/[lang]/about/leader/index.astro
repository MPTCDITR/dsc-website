---
import LeaderList from "@/components/leader/LeaderList.astro";
import Main from "@/components/Main.astro";
import TextElement from "@/components/TextElement";

import { languages, type SupportedLanguage } from "@/i18n/ui";
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const title = "DSC General Secretariat's Leaders";

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const lang = Astro.params.lang as SupportedLanguage;
const allLeaders = await getCollection("leaders");
const leaders = allLeaders.filter((leader) => leader.data.lang === lang);
---

<Layout title={title}>
  <Main>
    <section aria-label={title}>
      <header>
        <TextElement
          variant="heading"
          className="mb-4 text-center text-primary"
        >
          {title}
        </TextElement>
      </header>
      <LeaderList leaders={leaders} lang={lang} />
    </section>
  </Main>
</Layout>
