---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  description: string;
  canonicalURL: string;
  publishDate: Date;
  image?: string;
}

const { title, description, canonicalURL, publishDate, image } = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  canonicalURL={canonicalURL}
  image={image}
  type="article"
>
  <Fragment slot="head">
    <meta
      property="article:published_time"
      content={publishDate.toISOString()}
    />
    <meta property="article:author" content="Digital Security Committee" />

    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Article",
        headline: title,
        image: new URL(image || "/default-og-image.jpg", Astro.url),
        datePublished: publishDate.toISOString(),
        dateModified: new Date().toISOString(),
        author: {
          "@type": "Organization",
          name: "Digital Security Committee",
          url: Astro.site,
        },
      })}
    />
  </Fragment>

  <slot />
</BaseLayout>
