---
import { getArticleUrl } from "@/lib/route";

import Card from "./ArticleCard.astro";
import type { SupportedLanguage } from "@/i18n/ui";
import type { CollectionEntry } from "astro:content";

interface Props {
  articles: CollectionEntry<"articles">[];
  lang: SupportedLanguage;
}

const { articles, lang } = Astro.props;
---

<div class="grid grid-cols-1 gap-5 p-5 md:grid-cols-3 lg:grid-cols-4">
  {
    articles.map((article) => (
      <Card
        image={article.data.image}
        title={article.data.title}
        body={article.body}
        href={getArticleUrl(article.slug, lang)}
        date={article.data.date}
      />
    ))
  }
</div>
