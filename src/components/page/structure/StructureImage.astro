---
import structureDesktopEN from "@/asset/structure-desktop-en.svg";
import structureDesktopKH from "@/asset/structure-desktop-kh.svg";
import structureMobileEN from "@/asset/structure-mobile-en.svg";
import structureMobileKH from "@/asset/structure-mobile-kh.svg";
import { Image } from "astro:assets";

interface Props {
  lang: string;
}

const { lang } = Astro.props as Props;
---

<Image
  src={lang == "en" ? structureDesktopEN : structureDesktopKH}
  alt="structure diagram of D.S.C."
  class="hidden size-full object-cover lg:flex"
  loading="eager"
  quality="high"
  widths={[640, 768, 1024, 1280, 1440, 1600]}
  format="webp"
/>

<Image
  src={lang == "en" ? structureMobileEN : structureMobileKH}
  alt="structure diagram of D.S.C."
  class="size-full object-cover lg:hidden"
  loading="eager"
  quality="high"
  widths={[640, 768, 1024, 1280, 1440, 1600]}
  format="webp"
/>
