---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  image: ImageMetadata;
  name: string;
}

const { title, image, name } = Astro.props as Props;
---

<div class="grid place-items-center gap-y-5">
  <div
    class="relative size-52 overflow-hidden rounded-full border-[5px] border-white drop-shadow-lg dark:border-gray-300"
  >
    <Image src={image} alt={title + " " + name} />
  </div>
  <div class="text-lg md:text-xl">
    {title}<span class="ml-3 font-bold">{name}</span>
  </div>
</div>
