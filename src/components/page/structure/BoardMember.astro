---
import dataEn from "./data/data-en.json";
import dataKm from "./data/data-km.json";
import type { SupportedLanguage } from "@/i18n/ui";

interface Props {
  lang: SupportedLanguage;
}

const { lang } = Astro.props as Props;

const boardMembers = lang === "km" ? dataKm : dataEn;
---

<div class="pb-8">
  <div class="grid gap-y-3 rounded-md bg-gray-200 p-5 text-sm xl:text-base">
    {
      boardMembers?.map((member) => {
        return (
          <div class="board-member lg:grid-cols-16 grid-cols-12 gap-x-3 space-y-3 rounded-t-md bg-white px-4 py-5 dark:bg-gray-500 md:grid md:space-y-0">
            <div class="name col-span-3 flex gap-x-2 lg:col-span-3">
              {member.title}
              <b class="font-bold">{member.name}</b>
            </div>
            <div class="organization col-span-7">{member.organization}</div>
            <div class="role col-span-2 text-sm md:whitespace-nowrap">
              {member.role}
            </div>
          </div>
        );
      })
    }
  </div>
</div>
