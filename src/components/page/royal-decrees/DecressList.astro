---
import DecreesCard from "./DecreesCard.astro";
import type { SupportedLanguage } from "@/i18n/ui";
import type { CollectionEntry } from "astro:content";

interface Props {
  decrees: CollectionEntry<"decrees">[];
  lang: SupportedLanguage;
}

const { decrees, lang } = Astro.props;
---

<ul class="grid list-none grid-cols-1 gap-5 p-5 md:grid-cols-2 lg:grid-cols-3">
  {
    decrees.map((decree) => (
      <li>
        <DecreesCard
          title={decree.data.title}
          body={decree.body}
          date={decree.data.date}
          lang={lang}
          file={decree.data.file}
          type={decree.data.type}
        />
      </li>
    ))
  }
</ul>
