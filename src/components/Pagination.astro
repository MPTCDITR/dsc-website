---
import { type SupportedLanguage } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";
import type { Page } from "astro";

interface Props {
  page: Page;
}

const { page } = Astro.props;
const lang = Astro.currentLocale as SupportedLanguage;
const t = useTranslations(lang);
---

<nav aria-label="Pagination" class="mt-8 flex justify-center">
  {
    page.url.prev && (
      <a
        href={page.url.prev}
        class="mr-4 rounded bg-primary px-4 py-2 text-primary-foreground"
      >
        {t("previous")}
      </a>
    )
  }
  <span class="px-4 py-2">
    {t("page")}
    {page.currentPage}
    {t("of")}
    {page.lastPage}
  </span>
  {
    page.url.next && (
      <a
        href={page.url.next}
        class="ml-4 rounded bg-primary px-4 py-2 text-primary-foreground"
      >
        {t("next")}
      </a>
    )
  }
</nav>
